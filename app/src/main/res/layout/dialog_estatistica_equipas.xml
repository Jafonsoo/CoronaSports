<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#00ffffff">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorAccent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@color/blue"
                android:padding="10dp">

                <Button
                    android:id="@+id/buttonEstatEquipa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/maxequipa"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:background="@color/cardview_shadow_start_color"
                    android:text="OK" />

                <ImageView
                    android:id="@+id/iconequipas"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_treinador" />

                <TextView
                    android:id="@+id/textTotalEquipas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textEstatisticas"
                    android:layout_marginTop="20dp"
                    android:text="Numero de equipas afetadas" />

                <TextView
                    android:id="@+id/numtotalequipas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textEstatisticas"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/textTotalEquipas"
                    android:layout_toRightOf="@+id/textTotalEquipas"
                    android:text="10" />

                <TextView
                    android:id="@+id/textEstatisticas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iconequipas"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:includeFontPadding="false"
                    android:text="Estatistica Geral Das Equipas"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/textmaxequipa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/numtotalequipas"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/maxequipa"
                    android:layout_toRightOf="@+id/maxequipa"
                    android:text="Sem Dados" />

                <TextView
                    android:id="@+id/maxequipa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTotalEquipas"
                    android:layout_marginTop="15dp"
                    android:text="Ultima equipa registada" />



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>