<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#00ffffff">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorAccent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/blue"
                android:padding="10dp">

                <Button
                    android:id="@+id/buttonEstatPais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/numTotalRecuperados"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:background="@color/cardview_shadow_start_color"
                    android:text="OK" />

                <ImageView
                    android:id="@+id/iconmundo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_public_black_24dp" />

                <TextView
                    android:id="@+id/textEstatisticas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iconmundo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:includeFontPadding="false"
                    android:text="@string/estatistica_geral_dos_pa_ses"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textTotalPaises"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textEstatisticas"
                    android:layout_marginTop="20dp"
                    android:text="@string/paises_registados"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/numtotalpaises"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textEstatisticas"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/textTotalPaises"
                    android:layout_toRightOf="@+id/textTotalPaises"
                    android:text="10"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textTotalSuspeitos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTotalPaises"
                    android:layout_marginTop="10dp"
                    android:text="@string/total_de_casos_suspeitos"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/numTotalSuspeitos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTotalPaises"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/textTotalSuspeitos"
                    android:layout_toRightOf="@+id/textTotalSuspeitos"
                    android:text="100000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textTotalInfetados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTotalSuspeitos"
                    android:layout_marginTop="10dp"
                    android:text="@string/total_de_infetados"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/numTotalInfetados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTotalSuspeitos"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/textTotalInfetados"
                    android:layout_toRightOf="@+id/textTotalInfetados"
                    android:text="1566"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textTotalObitos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTotalInfetados"
                    android:layout_marginTop="10dp"
                    android:text="@string/total_de_obitos"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/numTotalObitos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTotalInfetados"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/textTotalObitos"
                    android:layout_toRightOf="@+id/textTotalObitos"
                    android:text="285"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textTotalRecuperados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTotalObitos"
                    android:layout_marginTop="10dp"
                    android:text="@string/total_de_recuperados"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/numTotalRecuperados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTotalObitos"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/textTotalRecuperados"
                    android:layout_toRightOf="@+id/textTotalRecuperados"
                    android:text="2855"
                    android:textSize="15sp" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>